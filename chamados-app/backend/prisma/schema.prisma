generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
  ticketsRequested Ticket[] @relation("requested")
  ticketsAssigned  Ticket[] @relation("assigned")
  comments  Comment[]
}

model Ticket {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  equipment   String?
  priority    String   @default("media")
  status      String   @default("aberto")
  requesterId Int?
  requester   User?    @relation("requested", fields: [requesterId], references: [id])
  assigneeId  Int?
  assignee    User?    @relation("assigned", fields: [assigneeId], references: [id])
  comments    Comment[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Comment {
  id        Int      @id @default(autoincrement())
  ticketId  Int
  ticket    Ticket   @relation(fields: [ticketId], references: [id])
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
  content   String
  createdAt DateTime @default(now())
}